<% if @has_layout %>
    <div class="layout-for-devise container">
<% end %>
<h2 class="lead form-headline text-uppercase">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'remodal-confirm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<% if @has_layout %>
    </div>
<% end  %>
