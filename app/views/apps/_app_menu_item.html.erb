<a class="menu-item app-menu-item" data-app-id="<%= app.id %>">
  <div class="app-icon-small text-left tooltipped tooltipped-e" aria-label="<%= app.name %>">
    <% if app.icon_path %>
        <%= image_tag(app.icon_path) %>
    <% else %>
        <%= octicon "beaker", :"aria-label" => "beaker" %>
    <% end %>
    <div class="desc">
      <%= truncate(app.name.titleize,length:10) %>
      <button class="btn btn-outline remove-button" data-app-id= <%= app.id %>>
        <%= octicon "trashcan", :"aria-label" => "trashcan" %>
      </button>
    </div>
  </div>
</a>